<body>
    <div class="user-data">

    </div>
    <div class="ticket-container">
        <div class="ticket-data">
            <p class="container-title">Ticket Information</p>
            <p class="ticket-info"><strong>VAT:</strong> <%= ticketData.vat %></p>
            <p class="ticket-info"><strong>First Name:</strong> <%= ticketData.first_name %></p>
